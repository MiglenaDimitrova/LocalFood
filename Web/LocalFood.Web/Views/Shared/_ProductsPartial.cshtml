@model LocalFood.Web.ViewModels.Products.ProductsListViewModel
<div class="row">
    @foreach (var product in this.Model.Products)
    {
        <div class="media col-md-4">
            <div class="align-content-around">
                <div class="media-left">
                    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                        <image href=@product.Image class="media-object mr-3 img-responsive" width="100%" height="200" />
                    </svg>
                    @*<a href="#">
                <img class="media-object mr-3 img-responsive" width="100" src="@product.Image" />"
            </a>*@
                </div>
                <div class="col">
                    <div class="media-body">
                        <h4 class="media-heading">@product.Name</h4>
                    </div>
                    <div class="media-body">
                        <h5 class="media-heading">@product.CategoryName</h5>
                    </div>
                    <div class="media-body">
                        <h6 class="media-heading">@product.Description</h6>
                    </div>
                    <div class="media-body">
                        <h6 class="media-heading">@product.ProducerName</h6>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">@product.Price</h4>
                    </div>
                </div>
                @if (this.ViewData["Title"] == "Моите продукти")
                {
            <div class="btn-group">
                <a asp-controller="Products" asp-action="Edit" class="btn btn-warning" role="button" aria-pressed="true">Редактирай</a>
                <a asp-controller="Products" asp-action="Delete" class="btn btn-danger" role="button" aria-pressed="true">Изтрий</a>
            </div>
                }
            </div>
        </div>
    }
</div>
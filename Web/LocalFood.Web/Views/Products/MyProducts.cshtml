@model LocalFood.Web.ViewModels.Products.ProductsListViewModel
@{
    this.ViewData["Title"] = "Моите продукти";
} 
<hr />
<div class="row" >
@foreach(var product in this.Model.Products)
{
    <div class="media col-md-4">
        <div class="media-left">
            <a href="#">
                <img class="media-object mr-3 img-responsive" width="100" src="@product.Image">
            </a>
        </div>
        <div class="col">
            <div class="media-body">
                <h4 class="media-heading">@product.Name</h4>
            </div>
            <div class="media-body">
                <h5 class="media-heading">@product.CategoryName</h5>
            </div>
            <div class="media-body">
                <h6 class="media-heading">@product.Description</h6>
            </div>
            <div class="media-body">
                <h4 class="media-heading">@product.Price</h4>
            </div>
        </div>
    </div>
}
</div>
<hr/>
<nav class="mx-auto" aria-label="Page navigation">
    <ul class="pagination  justify-content-center ">
        <li class="page-item @if(!Model.HasPrevoiusPage) {<text>disabled</text>}">
            <a class="page-link page-item" asp-action="MyProducts" asp-route-id="@Model.PrevoiusPageNumber">
                <span class="page-item disabled" aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="MyProducts" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">@Model.PageNumber</span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
        {
            if (i <= Model.PageCount)
            {
                <li class="page-item"><a class="page-link" asp-action="MyProducts" asp-route-id="@i">@i</a></li>
            }
        }
        <li class="page-item @if(!Model.HasNextPage) {<text>disabled</text>}">
            <a class="page-link page-item" asp-action="MyProducts" asp-route-id="@Model.NextPageNumber">
                <span class="page-item disabled" aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>


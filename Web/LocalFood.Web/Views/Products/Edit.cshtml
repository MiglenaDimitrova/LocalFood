@model LocalFood.Web.ViewModels.Products.ProductInputModel
@{
    this.ViewData["Title"] = "Редактирай продукт";
}
<h1>@this.ViewData["Title"]</h1>

<form method="post" class="col-md-6" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <hr>
    @*<input type="hidden" asp-for="Id" />*@
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsBio"></label>
        <select asp-for="IsBio" class="form-control">
            <option value="false">Не</option>
            <option value="true">Да</option>
        </select>
        <span asp-validation-for="IsBio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <select asp-for="CategoryName" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.CategoryName">@category.CategoryName</option>
            }
        </select>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <input type="submit" class="button btn-primary" value="Добави" />
</form>